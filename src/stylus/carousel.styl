.carousel
  // border 1px solid red 
  text-align left
  margin 2em 0
  max-width 580px
  margin 2em auto
  border-top 1px solid var(--lightGray)
  &-content
    &[open]
      // border 1px solid red
      .carousel
        &-header
          border none
          &::-webkit-details-marker 
            color var(--softRed)
  &-header 
    // border 1px solid blue
    padding 1.5em 0
    border-bottom  1px solid var(--lightGray)
    font-size .9em
    &:focus
      outline 0
    &::-webkit-details-marker
      // display none
      float right
      color var(--softBlue)
  @media screen and (min-width 1024px)
     border-top 1px solid var(--lightGray)